@model _Api.Models.IndexModel;
@{
    ViewData["Title"] = "Map";
}

<!DOCTYPE html>
<html>
    <head>
    <h2>@ViewData["StoreName"]</h2>
    <h3>@ViewData["Message"]</h3>
    
    <style>
        #map {
        height: 600px;
        }
    </style>
    
    <h2>Stores</h2>

    <script>
      let map;

      function initMap() {
        map = new google.maps.Map(document.getElementById("map"), {
          center: { lat: -19.9187495, lng: -43.9400902 },
          zoom: 18,
        });
      }
      @for (int i = 0; i < Model.latitude.Length; i++)
      {
          @:AddMarker(-19.9187495,-43.9400902,map)
      }
      function AddMarker(latitude, longitude, map) {
          var marker = new google.maps.Marker({
              position: new google.maps.LatLng(latitude,longitude),
              title: "Marks"
              map,
          });
      }
    </script>
    </head>

    <body>
        <div id="map"></div>
        <script src="" async defer></script>
    </body>
</html>